<h1>Profile</h1>

<div class="col-xl-4 pl-0">
  <div class="card">
    <div class="card-body">
      <h2 class="d-flex justify-content-center">Update</h2>
      <%= form_with model: @user, url: update_user_profile_path(@user.id) do |f| %>
        <% if flash[:error] %>
          <div class='alert alert-danger'><%= flash[:error] %></div>
        <% end %>

        <!--First and last name labels and text fields-->
        <div class="form-group row">
          <div class="col-xl">
            <%= label_tag(:firstName, "First Name:", class: "col-form-label") %>
            <%= f.text_field :firstName, class: "form-control", value: @user.firstName %>
          </div>
          <div class="col-xl">
            <%= label_tag(:lastName, "Last Name:", class: "col-form-label") %>
            <%= f.text_field :lastName, class: "form-control", value: @user.lastName %>
          </div>
        </div>
        <div class="form-group">
        </div>
        <!--Email label and text field-->
        <div class="form-group">
          <%= label_tag(:email, "Email:", class: "col-form-label") %>
          <%= f.text_field :email, class: "form-control", value: @user.email %>
        </div>
        <!--Old password label and text field-->
        <div class="form-group">
          <%= label_tag(:old_password, "Old Password:", class: "col-form-label") %>
          <%= f.password_field :old_password, class: "form-control", value: @user.password %>
        </div>
        <!--Old password confirmation label and text field-->
        <div class="form-group">
          <%= label_tag(:old_password_confirmation, "Confirm Old Password:", class: "col-form-label") %>
          <%= f.password_field :old_password_confirmation, class: "form-control" %>
        </div>
        <!--New password label and text field-->
        <div class="form-group">
          <%= label_tag(:new_password, "New Password:", class: "col-form-label") %>
          <%= f.password_field :new_password, class: "form-control" %>
        </div>
        <!--New password confirmation label and text field-->
        <div class="form-group">
          <%= label_tag(:new_password_confirmation, "Confirm New Password:", class: "col-form-label") %>
          <%= f.password_field :new_password_confirmation, class: "form-control" %>
        </div>

        <%= submit_tag "Update", class: "btn btn-ivos col-form-label" %>

      <% end %>
    </div>
  </div>
</div>
